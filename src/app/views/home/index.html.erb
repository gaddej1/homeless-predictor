<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <!-- Form instructions -->
  <div class="d-flex align-items-center flex-column justify-content-center h-100 bg-dark text-white" id="header">
  <h4>Fill out the following information to find out how quickly you would become homeless if you lost your job. </h4>
  <h5 class="vert-form">Monthly necessary expenses includes expenses such as:</h5>
  <ul>
  <li>rent/mortgage</li>
  <li>food</li>
  <li>utilities(water, wifi, electricity, heat/AC)</li> 
  <li>loan payments(college loans, car payments, mortgages)</li>
  <li>phone bill</li>
  <li>childcare</li>
  </ul>
  
  <!-- Form for user input -->
  <div class = "vert-form">
  <%= form_tag "/home/calculate" do %>

      <!-- Monthly Necessary Expenses Input Field -->
      <div class="form-group form-control form-control-lg">
        <div class = "text-center">
        <%= label_tag :monthly_necessary_expenses%>
        </div>
        <div class = "text-center">
        <%= number_field_tag :monthly_necessary_expenses, params[:monthly_necessary_expenses], min: 0.1, step: 0.01, :required => 'required'%>    
        </div>
      </div>

      <!-- Savings Input Field -->
      <div class="form-group form-control form-control-lg">
        <div class = "text-center">
        <%= label_tag :savings%>
        </div>
        <div class = "text-center">
        <%= number_field_tag :savings, params[:savings], min: 0, step: 0.01, :required => 'required'%>
        </div>
      </div>

      <!-- County Input Field -->
      <div class="form-group form-control form-control-lg">
        <div class = "text-center">
        <%= label_tag :county%>
        </div>
        <div class = "text-center">
        <%= select_tag(:county, options_for_select(county_options(), params[:county]), class:"select", :prompt => "Select a County", :required => 'required') %>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="form-group form-control-lg text-center">
        <%= submit_tag "Submit" %>
      </div>
  <% end  %>
  </div>
  </div>
